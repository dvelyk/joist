{% extends "page.twig" %}

{% block heading %}
	{% if post.title %}
		{{ post.title }}
	{% elseif is_category %}
		{{ __( 'Category: %s', 'joist' )|format(title) }}
	{% else %}
		{{ title }}
	{% endif %}
{% endblock %}

{% block page_content %}
	{% for post in posts %}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}
	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}

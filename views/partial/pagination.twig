{% if posts.pagination.pages is not empty %}
    <div class="pagination-block">
        <ul class="pagination">
            {% if pagination.pages|first and pagination.pages|first.current != true %}
                <li class="first btn">
                    <a href="{{ pagination.pages|first.link }}{{ fragment }}">First</a>
                </li>
            {% else %}
                <li class="first btn disabled">
                    <span>First</span>
                </li>
            {% endif %}

            {% if pagination.prev %}
                <li class="prev btn">
                    <a href="{{ pagination.prev.link }}{{ fragment }}">Previous</a>
                </li>
            {% else %}
                <li class="prev btn disabled">
                    <span>Previous</span>
                </li>
            {% endif %}

            {% for page in pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}{{ fragment }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li aria-current="page">
                        <span class="{{ page.class }}">{{ page.title }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pagination.next %}
                <li class="next btn">
                    <a href="{{ pagination.next.link }}{{ fragment }}">
                        Next
                    </a>
                </li>
            {% else %}
                <li class="next btn disabled">
                    <span>Next</span>
                </li>
            {% endif %}
            {% if pagination.pages|last and pagination.pages|last.current != true %}
                <li class="last btn">
                    <a href="{{ pagination.pages|last.link }}{{ fragment }}">Last</a>
                </li>
            {% else %}
                <li class="last btn disabled">
                    <span>Last</span>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}

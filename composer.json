{
  "name": "dvelyk/joist",
  "description": "Joist is a WordPress starter theme built with Timber",
  "type": "wordpress-theme",
  "minimum-stability": "stable",
  "authors": [
      {
          "name": "Kyle Robertson",
          "email": "kyle@typefirst.ca"
      }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "extra" : {
    "installer-paths" : {
      "../../plugins/{$name}/" : ["type:wordpress-plugin"]
    }
  },
  "require": {
    "wpackagist-plugin/safe-svg": "1.6.*",
	  "timber/timber": "1.7.0",
    "mindkomm/timmy": "^0.13.5"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "0.4.*",
    "wp-coding-standards/wpcs": "0.14.*",
    "hellonico/timber-dump-extension": "^0.1.1",
    "squizlabs/php_codesniffer": "*"
  }
}
